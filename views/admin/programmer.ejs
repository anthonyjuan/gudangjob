<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Admin Page</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link href="/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="/css/stylish-portfolio.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,700,300italic,400italic,700italic" rel="stylesheet" type="text/css">

  </head>
  <body>
    <!-- <a href="/admin"><button>Back</button></a> -->
    <%- include ../navbar %>
    <div class="container">

      <h1>Admin Site</h1>

      <table class="table">
        <thead>
          <tr>
            <td>ID</td>
            <td>Nama</td>
            <td>Email</td>
            <td>Phone</td>
            <td>Skils</td>
            <td>Address</td>
            <td>Personal Site</td>
          </tr>
        </thead>
        <tbody>
          <% for(let i = 0; i < programmer.length; i++) { %>
          <tr>
            <td><%= programmer[i].id %></td>
            <td><%= programmer[i].name %></td>
            <td><%= programmer[i].email %></td>
            <td><%= programmer[i].phone %></td>
            <td><%= programmer[i].skills %></td>
            <td><%= programmer[i].address %></td>
            <td><%= programmer[i].personal_site %></td>
            <td><a href="admin/programmer/delete/<%= programmer[i].id %>" onclick="return confirm('Data Programmer akan di Hapus ?')"><button class="btn" type="button" name="button">DELETE</button></a></td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>

  </body>
</html>